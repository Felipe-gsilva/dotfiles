# Global settings
separator=true
separator_block_width=22
markup=pango

# Volume (PulseAudio)
[volume-pulse]
label=ðŸ”Š 
command=if pactl get-sink-mute @DEFAULT_SINK@ | grep -q "yes"; then echo "MUTED"; else pactl get-sink-volume @DEFAULT_SINK@ | awk '{print $5}'; fi
interval=5
signal=1

# Music (Spotify) - FIXED: Single-line command
[music]
label=ðŸŽµ 
command=playerctl -p spotify metadata --format '{{title}}' || echo "No music"
interval=5

# Memory
[memory]
label=ðŸ§ : 
command=free -mh --si | awk '/^Mem:/ { print $3 "/" $2 }'
interval=5

# Battery
[battery]
label=ðŸ”‹ 
command=upower -i $(upower -e | grep BAT) | awk '/percentage/ {print $2}'
interval=30

# Disk
[disk]
label=ðŸ’½ 
command=df -h / | awk 'NR==2 {print $4 " free (" $5 " used)"}'
interval=60

# Date/Time
[date]
label=ðŸ“… 
command=date '+%a %d-%m-%Y %H:%M:%S'
interval=1
